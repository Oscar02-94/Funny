{
  "name": "Funny",
  "plural": "Funnys",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "emailVerificationRequired": false
  },
  "properties": {
    "email": {
      "type": "string",
      "required": true
    },
    "password": {
      "type": "string",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "imageProfile": {
      "type": "hasOne",
      "model": "ImageProfile",
      "options": {
        "nestRemoting": true
      }
    },
    "publications": {
      "type": "hasMany",
      "model": "Publication"
    },
    "comments": {
      "type": "hasMany",
      "model": "Comment"
    }
  },
  "acls": [
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "property": "*"
    }
  ],
  "methods": {
    "register": {
      "accepts": [
        {
          "arg": "email",
          "type": "string",
          "required": true,
          "description": "Email de usuario"
        },
        {
          "arg": "password",
          "type": "string",
          "required": true,
          "description": "Contraseña"
        },
        {
          "arg": "password2",
          "type": "string",
          "required": true,
          "description": "Repetir contraseña"
        },
        {
          "arg": "name",
          "type": "string",
          "required": true,
          "description": "Nombre del usuario"
        },
        {
          "arg": "phone",
          "type": "number",
          "required": true,
          "description": "Numero de telefono"
        }
      ],
      "returns": [
        {
          "arg": "data",
          "type": "object",
          "root": true,
          "description": ""
        }
      ],
      "description": "Registrar un nuevo usuario",
      "http": [
        {
          "path": "/register",
          "verb": "post"
        }
      ]
    }
  }
}
